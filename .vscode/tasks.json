{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install dependencies (FrontEnd)",
      "type": "npm",
      "script": "install",
      "path": "frontEnd/"
    },
    {
      "label": "Install dependencies (BackEnd)",
      "type": "npm",
      "script": "install",
      "path": "backEnd/"
    },
    {
      "label": "Build FrontEnd",
      "type": "npm",
      "script": "build",
      "path": "frontEnd/"
    },
    {
      "label": "Build BackEnd",
      "type": "npm",
      "script": "build",
      "path": "backEnd/"
    },
    {
      "label": "Install dependencies (FrontEnd and BackEnd)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Install dependencies (FrontEnd)",
        "Install dependencies (BackEnd)"
      ]
    },
    {
      "label": "Build App",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Install dependencies (FrontEnd and BackEnd)",
        "Build FrontEnd",
        "Build BackEnd"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Frontend",
      "type": "npm",
      "script": "start",
      "path": "frontEnd/"
    },
    {
      "label": "Start Backend",
      "type": "npm",
      "script": "start",
      "path": "backEnd/"
    },
    {
      "label": "Start App",
      "dependsOn": [
        "Start Backend",
        "Start Frontend"
      ]
    },
    {
      "label": "Deploy!! - (block!)",
      "type": "shell",
      "command": "${command:appService.Deploy}",
      "dependsOrder": "sequence",
      "dependsOn": ["Build App"]
    }
  ]
}